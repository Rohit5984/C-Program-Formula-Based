#include <cstdio>

void checkAverage(float a, float b, float c);  

int main() 
{
    float a, b, c;

    printf("Enter three numbers: ");
    scanf("%f %f %f", &a, &b, &c);

    checkAverage(a, b, c);   

    return 0;
}

void checkAverage(float a, float b, float c) 
{ 
    float average = (a + b + c) / 3;
    printf("Average is %.2f\n", average);
}
